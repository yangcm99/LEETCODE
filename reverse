class Solution {
public:
    int reverse(int x) {
        int rev=0;
        int pop;
        while(x!=0){
            pop=x%10;
            x=x/10;
            if(rev>INT_MAX/10||(rev==INT_MAX/10&&pop>INT_MAX%10)) return 0;//溢出上限
            if(rev<INT_MIN/10||(rev==INT_MIN/10&&pop<INT_MIN%10)) return 0;//溢出下限
            rev=rev*10+pop;
        }  
        return rev;
    }
};
